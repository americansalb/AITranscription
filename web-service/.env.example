# Vaak Web Service Configuration
# Copy to .env and fill in your values

# Database (PostgreSQL)
VAAK_WEB_DATABASE_URL=postgresql+asyncpg://vaak:vaak@localhost:5432/vaak_web

# Auth
VAAK_WEB_SECRET_KEY=generate-a-secure-random-key-here
VAAK_WEB_GOOGLE_CLIENT_ID=
VAAK_WEB_GOOGLE_CLIENT_SECRET=
VAAK_WEB_GITHUB_CLIENT_ID=
VAAK_WEB_GITHUB_CLIENT_SECRET=

# Platform API keys (used for default-tier users)
VAAK_WEB_ANTHROPIC_API_KEY=sk-ant-...
VAAK_WEB_OPENAI_API_KEY=sk-...
VAAK_WEB_GOOGLE_AI_API_KEY=

# Stripe billing
VAAK_WEB_STRIPE_SECRET_KEY=sk_test_...
VAAK_WEB_STRIPE_WEBHOOK_SECRET=whsec_...
VAAK_WEB_STRIPE_PRICE_PRO=price_...
VAAK_WEB_STRIPE_PRICE_BYOK=price_...

# Pricing
VAAK_WEB_MARKUP_MULTIPLIER=2.0
VAAK_WEB_FREE_TIER_MONTHLY_TOKENS=50000
VAAK_WEB_PRO_TIER_MONTHLY_TOKENS=2000000

# Safety limits
VAAK_WEB_MAX_COST_PER_MESSAGE=5.0
VAAK_WEB_MAX_COST_PER_SESSION=50.0

# CORS (add your frontend domain)
VAAK_WEB_CORS_ORIGINS=["http://localhost:5173","http://localhost:3000"]
