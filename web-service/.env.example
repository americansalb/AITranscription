# Vaak Web Service — Environment Variables
# Copy to .env and fill in values
#
# IMPORTANT: Run with --workers 1 (agent runtime uses in-memory state).
# Example: uvicorn app.main:app --workers 1

# REQUIRED — Authentication
VAAK_WEB_SECRET_KEY=  # Generate: python -c "import secrets; print(secrets.token_urlsafe(32))"

# REQUIRED for production — BYOK key encryption
VAAK_WEB_FERNET_KEY=  # Generate: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"

# Database (PostgreSQL)
VAAK_WEB_DATABASE_URL=postgresql+asyncpg://vaak:password@localhost:5432/vaak_web

# Platform API keys (used for free/pro tier users)
VAAK_WEB_ANTHROPIC_API_KEY=
VAAK_WEB_OPENAI_API_KEY=
VAAK_WEB_GOOGLE_AI_API_KEY=

# Stripe billing
VAAK_WEB_STRIPE_SECRET_KEY=
VAAK_WEB_STRIPE_WEBHOOK_SECRET=
VAAK_WEB_STRIPE_PRICE_PRO=
VAAK_WEB_STRIPE_PRICE_BYOK=

# Usage limits (tokens per month)
VAAK_WEB_FREE_TIER_MONTHLY_TOKENS=50000
VAAK_WEB_PRO_TIER_MONTHLY_TOKENS=2000000

# Cost controls
VAAK_WEB_MARKUP_MULTIPLIER=2.0
VAAK_WEB_MAX_COST_PER_MESSAGE=5.0
VAAK_WEB_MAX_COST_PER_SESSION=50.0

# CORS (JSON array of allowed origins)
VAAK_WEB_CORS_ORIGINS=["https://your-domain.com"]
